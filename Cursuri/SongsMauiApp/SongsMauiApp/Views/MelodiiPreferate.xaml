<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SongsMauiApp.Views.MelodiiPreferate"
             Title="Melodii Preferate"
             BackgroundColor="#7B58CD">

    <ListView
        x:Name="listViewFavoriteSongs">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame  BackgroundColor="#9376D5">
                        <HorizontalStackLayout Padding="10,10,10,10" >
                            <Label TextColor="Black" Text="{Binding Nume}"/>
                            <Label TextColor="Black" Text="{Binding Gen, StringFormat=' Gen: {0}'}"/>
                            <Label TextColor="Black" Text="{Binding Artist, StringFormat=' Artist: {0}'}"/>
                        </HorizontalStackLayout>
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
</ContentPage>